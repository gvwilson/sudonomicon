    "version": "0.2.0",
    "configurations": [
        {
            "name": "lint",
            "type": "debugpy",
            "request": "launch",
            "program": "lib/mccole/bin/lint.py",
            "console": "integratedTerminal",
            "args": [
                "--dom",
                "./lib/mccole/dom.yml",
                "--htmldir",
                "./docs",
                "--root",
                "."
